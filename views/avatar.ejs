<svg
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  style="
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  "
  width="<%= size %>"
  height="<%= size %>"
  viewBox="0 0 <%= size %> <%= size %>"
  version="1.1"
>
  <% if (rounded == "true") { %>
  <circle
    fill="<%= background %>"
    cx="<%= size/2 %>"
    width="<%= size %>"
    height="<%= size %>"
    cy="<%= size/2 %>"
    r="<%= size/2 %>"
  />
  <% } else { %>
  <rect
    fill="<%= background %>"
    cx="<%= size/2 %>"
    width="<%= size %>"
    height="<%= size %>"
    cy="<%= size/2 %>"
    r="<%= size/2 %>"
  />
  <% } %>
  <text
    x="50%"
    y="50%"
    style="
      line-height: 1;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto',
        'Oxygen', 'Ubuntu', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
        sans-serif;
    "
    alignment-baseline="middle"
    text-anchor="middle"
    font-size="<%= fontSize %>"
    font-weight="<%= weight %>"
    dy=".1em"
    dominant-baseline="middle"
    fill="<%= letterColor %>"
  >
    <%= fullname %>
  </text>
</svg>
